<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn"
    android:backgroundTint="@color/white"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTypeShow"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:drawableStartCompat="@drawable/apps_sort"
        android:drawablePadding="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="List View"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvChoose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:drawableStartCompat="@drawable/ic_checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTypeShow"
        android:text="Select"
        android:drawablePadding="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/tvSort"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:drawableStartCompat="@drawable/ic_settings_sliders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChoose"
        android:text="Sort"
        android:drawablePadding="10dp"
        android:paddingStart="16dp"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>