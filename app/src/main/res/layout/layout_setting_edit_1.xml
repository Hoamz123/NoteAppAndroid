<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/bg_btn"
    android:backgroundTint="@color/white"
    android:elevation="8dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/llPin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_pin_fn"
        android:text="Pin"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"/>


    <TextView
        android:id="@+id/llShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_share_fn"
        android:text="Share"
        android:textSize="16dp"
        android:fontFamily="@font/normal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/llPin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/llReadingMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/book_svgrepo_com"
        android:text="Reading mode"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/normal"
        app:layout_constraintTop_toBottomOf="@id/llShare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/llSaveTXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_txt_final"
        android:text="Export to txt"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textSize="16dp"
        android:fontFamily="@font/normal"
        app:layout_constraintTop_toBottomOf="@id/llReadingMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/llSaveImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_image_fn"
        android:text="Export to image"
        android:textSize="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llSaveTXT"
        app:layout_constraintStart_toStartOf="parent"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/llFavorite"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/normal"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:text="Favorites"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_star_editing_final"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llSaveImage" />

    <TextView
        android:id="@+id/llArchive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_archive_final"
        android:text="Archive"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/normal"
        app:layout_constraintTop_toBottomOf="@id/llFavorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawablePadding="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"/>

    <TextView
        android:id="@+id/llDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/normal"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:paddingEnd="20dp"
        android:text="Delete"
        android:textSize="16dp"
        app:drawableStartCompat="@drawable/ic_trash_final"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llArchive"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>