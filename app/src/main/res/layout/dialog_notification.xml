<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dialog"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="46dp"
        android:paddingBottom="28dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Thêm lời nhắc"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvChooseDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Chọn ngày :"
            app:layout_constraintEnd_toStartOf="@+id/acSetDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/acSetDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="5dp"
            android:text="05/04/2025"
            android:textSize="15sp"
            app:drawableEndCompat="@drawable/ic_more_item"
            app:layout_constraintStart_toEndOf="@+id/tvChooseDay"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvChooseDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:background="#2D000000"/>

        <TextView
            android:id="@+id/tvChooseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Chọn giờ :"
            app:layout_constraintStart_toStartOf="@id/tvChooseDay"
            app:layout_constraintTop_toBottomOf="@id/acSetDay" />

        <TextView
            android:id="@+id/acSetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawablePadding="5dp"
            android:text="9:01"
            android:textSize="15sp"
            app:drawableEndCompat="@drawable/ic_more_item"
            app:layout_constraintStart_toStartOf="@id/acSetDay"
            app:layout_constraintTop_toBottomOf="@id/acSetDay" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvChooseTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:background="#2D000000"/>

        <TextView
            android:id="@+id/acRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableEndCompat="@drawable/ic_more_item"
            app:layout_constraintTop_toBottomOf="@id/tvChooseTime"
            app:layout_constraintStart_toStartOf="@id/tvChooseTime"
            android:layout_marginTop="40dp"
            android:drawablePadding="5dp"
            android:text="Không nhắc lại"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/acRepeat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:background="#2D000000"/>


        <TextView
            android:id="@+id/acSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/acRepeat"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="LƯU"
            android:layout_marginEnd="25dp"
            android:paddingVertical="6dp"
            android:textColor="@color/color_2"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/color_2"/>

        <TextView
            android:id="@+id/acCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/acSave"
            app:layout_constraintBottom_toBottomOf="@id/acSave"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/acSave"
            android:text="HỦY"
            android:layout_marginEnd="25dp"
            android:textSize="16sp"
            android:background="@drawable/bg_btn"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>