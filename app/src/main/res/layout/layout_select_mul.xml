<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icExitMulSel"
        android:layout_width="40dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_exit"
        app:layout_constraintBottom_toBottomOf="@id/titleMulSel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleMulSel" />

    <TextView
        android:id="@+id/titleMulSel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawablePadding="20dp"
        android:gravity="center"
        android:text="0 Selected"
        android:textColor="@color/color_2"
        android:fontFamily="@font/medium"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/icExitMulSel"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ac_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/titleMulSel"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@id/titleMulSel"
        android:src="@drawable/ic_select_all"
        android:layout_marginEnd="16dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>