<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="3dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="50dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Tạo nhãn mới"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="50dp"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtLabel"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Nhập nhãn"
            android:paddingVertical="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:background="@drawable/custom_input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivCancelText"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            android:src="@drawable/baseline_clear_24"
            app:layout_constraintTop_toTopOf="@id/edtLabel"
            app:layout_constraintBottom_toBottomOf="@id/edtLabel"
            app:layout_constraintEnd_toEndOf="@id/edtLabel"
            android:layout_marginEnd="14dp"/>

        <TextView
            android:id="@+id/tvNotOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HỦY"
            android:textColor="#5E000000"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edtLabel"
            app:layout_constraintEnd_toStartOf="@id/tvOk"
            android:layout_marginEnd="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/tvOk"
            android:layout_width="wrap_content"
            android:text="THÊM"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/color_2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="26dp"
            app:layout_constraintTop_toBottomOf="@id/edtLabel"
            app:layout_constraintEnd_toEndOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>