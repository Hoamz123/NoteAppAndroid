<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dialog"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingBottom="28dp">

    <TextView
        android:id="@+id/tvTitleRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="23dp"
        android:fontFamily="@font/medium"
        android:paddingEnd="0dp"
        android:layout_marginTop="25dp"/>

    <RadioGroup
        android:id="@+id/rbGroupRepeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitleRepeat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="20dp"
        android:background="@color/color_cb"
        android:paddingEnd="0dp"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/rbNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="None"
            android:textSize="18sp"
            android:fontFamily="@font/normal"
            android:checked="true"
            app:buttonTint="@color/color_2"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"/>

        <RadioButton
            android:id="@+id/rbDaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily"
            app:buttonTint="@color/color_2"
            android:textSize="18sp"
            android:fontFamily="@font/normal"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"/>

        <RadioButton
            android:id="@+id/rbWeekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weekly"
            app:buttonTint="@color/color_2"
            android:textSize="18sp"
            android:fontFamily="@font/normal"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"/>

        <RadioButton
            android:id="@+id/rbMonthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly"
            app:buttonTint="@color/color_2"
            android:textSize="18sp"
            android:fontFamily="@font/normal"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"/>

        <RadioButton
            android:id="@+id/rbYearly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yearly"
            app:buttonTint="@color/color_2"
            android:textSize="18sp"
            android:fontFamily="@font/normal"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"/>
    </RadioGroup>


    <TextView
        android:id="@+id/tcAcCancelRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textSize="15sp"
        android:fontFamily="@font/medium"
        android:textColor="@color/color_2"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rbGroupRepeats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tcAcAcceptRepeat"
        android:layout_marginEnd="30dp" />
    <TextView
        android:id="@+id/tcAcAcceptRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/medium"
        android:textColor="@color/color_2"
        app:layout_constraintTop_toBottomOf="@id/rbGroupRepeats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>