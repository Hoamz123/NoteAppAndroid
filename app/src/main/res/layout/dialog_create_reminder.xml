<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dialog"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:paddingBottom="28dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Thêm lời nhắc"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvChooseDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Chọn ngày "
            app:layout_constraintEnd_toStartOf="@+id/acSetDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/acSetDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="5dp"
            android:text="05/04/2025"
            app:drawableEndCompat="@drawable/ic_more_item"
            app:layout_constraintStart_toEndOf="@+id/tvChooseDay"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            app:layout_constraintTop_toBottomOf="@id/tvChooseDay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:background="#2D000000"/>

        <TextView
            android:id="@+id/tvChooseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Chọn giờ "
            app:layout_constraintStart_toStartOf="@id/tvChooseDay"
            app:layout_constraintTop_toBottomOf="@id/acSetDay" />

        <TextView
            android:id="@+id/acSetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:drawablePadding="5dp"
            android:text="9:01"
            app:drawableEndCompat="@drawable/ic_more_item"
            app:layout_constraintStart_toStartOf="@id/acSetDay"
            app:layout_constraintTop_toBottomOf="@id/acSetDay" />

        <View
            android:id="@+id/line_02"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            app:layout_constraintTop_toBottomOf="@id/tvChooseTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="5dp"
            android:background="#2D000000"/>

        <TextView
            android:id="@+id/acSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scrollRepeat"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="LƯU"
            android:layout_marginEnd="25dp"
            android:paddingVertical="6dp"
            android:textColor="@color/color_2"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/color_2"/>

        <TextView
            android:id="@+id/acCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/acSave"
            app:layout_constraintBottom_toBottomOf="@id/acSave"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/acSave"
            android:text="HỦY"
            android:paddingVertical="6dp"
            android:layout_marginEnd="25dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/acSetRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/acSave"
            app:layout_constraintBottom_toBottomOf="@id/acSave"
            android:gravity="center"
            android:text="Nhắc lại"
            android:paddingVertical="6dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/custom_bg_time_repeat"/>


        <HorizontalScrollView
            android:id="@+id/scrollRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/line_02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:scrollbars="none"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv15min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:background="@drawable/custom_bg_time_repeat"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingVertical="5dp"
                    android:paddingEnd="20dp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/tv30min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/custom_bg_time_repeat"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingVertical="5dp"
                    android:paddingEnd="20dp" />

                <TextView
                    android:id="@+id/tv1hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/custom_bg_time_repeat"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingVertical="5dp"
                    android:paddingEnd="20dp" />

                <TextView
                    android:id="@+id/tv1day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a day"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/custom_bg_time_repeat"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingVertical="5dp"
                    android:paddingEnd="20dp" />

                <TextView
                    android:id="@+id/tv1week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a week"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/custom_bg_time_repeat"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingVertical="5dp"
                    android:paddingEnd="20dp" />

                <TextView
                    android:id="@+id/tv1month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a month"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/custom_bg_time_repeat"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingVertical="5dp"
                    android:paddingEnd="20dp" />

            </LinearLayout>

        </HorizontalScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>