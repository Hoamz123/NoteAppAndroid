<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_dialog"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingBottom="28dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textSize="18sp"
            android:fontFamily="@font/medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/acSortByA_Z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonTint="@color/color_2"
                android:text="Name A - Z"
                android:textSize="15sp"
                android:fontFamily="@font/normal"
                android:layout_marginStart="25dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/acSortByZ_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonTint="@color/color_2"
                android:text="Name Z - A"
                android:textSize="15sp"
                android:fontFamily="@font/normal"
                android:layout_marginStart="25dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/acSortByTimeOldToNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonTint="@color/color_2"
                android:text="Created Time (Oldest first)"
                android:textSize="15sp"
                android:fontFamily="@font/normal"
                android:layout_marginStart="25dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/acSortByTimeNewToOld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonTint="@color/color_2"
                android:fontFamily="@font/normal"
                android:text="Created Time (Newest first)"
                android:textSize="15sp"
                android:layout_marginStart="25dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tvCancelSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            app:layout_constraintEnd_toStartOf="@id/tvOkSort"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/medium"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/color_2"/>

        <TextView
            android:id="@+id/tvOkSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/medium"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/color_2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>