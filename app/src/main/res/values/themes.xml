<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Hoamz" parent="Theme.Material3.DayNight.NoActionBar">
       <!--  Theme.Material3.DayNight.NoActionBar -->
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/color_bg</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>


    <style name="CustomViewPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
    </style>

    <style name="AllDayTextStyle">
        <item name="android:textColor">@color/color_2</item>
    </style>

    <!-- Theme cho MaterialDatePicker -->
    <style name="CustomDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="android:background">@color/white</item>
        <item name="colorPrimary">@color/color_2</item>
    </style>


    <style name="CustomTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="android:backgroundTint">@color/color_bg</item>
        <item name="colorPrimary">@color/color_2</item>
    </style>

    <style name="Theme.Hoamz" parent="Base.Theme.Hoamz" />
</resources>